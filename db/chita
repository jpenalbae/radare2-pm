R2PM_BEGIN

R2PM_GIT "https://github.com/jpenalbae/chita"
R2PM_DESC "[r2-r2pipe-node] Exploiting helper"

BINDIR="${R2PM_BINDIR}"

R2PM_INSTALL() {
	node --version || exit 1
	npm install || exit 1
	mkdir -p "${R2PM_BINDIR}"
	echo '#!/bin/sh' > "${R2PM_BINDIR}/chita"
	echo "exec node '`pwd`'"'/chita.js $*' >> "${R2PM_BINDIR}/chita"
	chmod +x "${R2PM_BINDIR}"/chita || exit 1
}

R2PM_UNINSTALL() {
	rm -f "${BINDIR}"/chita
	rm -rf "${R2PM_GITDIR}"/chita
}

R2PM_END
